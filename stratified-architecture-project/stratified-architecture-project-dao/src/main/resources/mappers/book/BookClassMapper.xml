<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaolv.stratifiedarchitectureproject.mybatis.mapper.book.BookClassMapper">

    <select id="findListByName" resultType="com.xiaolv.stratifiedarchitectureproject.mybatis.entity.book.BookClassDTO">
        SELECT * FROM book_class where name like #{name}
    </select>
    <select id="findById" resultType="com.xiaolv.stratifiedarchitectureproject.mybatis.entity.book.BookClassDTO">
        SELECT * FROM book_class where id =  #{id}

    </select>

    <insert id="insert">
        INSERT INTO book_class(name , validFlag) values (#{name}, #{validFlag})

    </insert>

    <update id="update">
        update book_class set name = #{name} where id =  #{id}

    </update>

    <delete id="delete">
        delete from book_class where id =  #{id}

    </delete>

</mapper>